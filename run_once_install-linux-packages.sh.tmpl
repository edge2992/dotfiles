#!/bin/bash
set -e

{{ if eq .chezmoi.os "linux" }}
echo "Installing system packages and Go tools"

sudo apt update

# Development tools
if ! command -v fzf >/dev/null 2>&1; then
  sudo apt install -y fzf htop build-essential libssl-dev pkg-config cmake

  # x11
  sudo apt install -y xclip
fi

# Install ripgrep for better grep performance (needed by Neovim)
if ! command -v rg >/dev/null 2>&1; then
  sudo apt install -y ripgrep
fi

if ! command -v go >/dev/null 2>&1; then
  GO_VERSION="1.22.4"
  wget https://go.dev/dl/go${GO_VERSION}.linux-amd64.tar.gz
  sudo tar -C /usr/local -xzf go${GO_VERSION}.linux-amd64.tar.gz
  rm go${GO_VERSION}.linux-amd64.tar.gz

  if [ -d /usr/local/go/bin ]; then
    export PATH="/usr/local/go/bin:$PATH"
  fi
fi

if ! command -v tmux >/dev/null 2>&1; then
  sudo apt install -y tmux
fi

if ! command -v go >/dev/null 2>&1; then
  echo "go command still not found; PATH is: $PATH"
  exit 1
fi

# Go tools (after Go installation)
if ! command -v memo >/dev/null 2>&1; then
  go install github.com/mattn/memo@latest
fi

if ! command -v ghq >/dev/null 2>&1; then
  go install github.com/x-motemen/ghq@latest
fi
{{ end }}
