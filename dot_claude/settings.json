{
  "permissions": {
    "allow": [
      "Read(**)",
      "Edit(**)",
      "Write(**.md)",
      "Write(dot_**)",
      "Write(private_dot_**)",
      "Write(run_once_**)",
      "Write(run_onchange_**)",
      "Write(.tmp/**)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(chezmoi diff:*)",
      "Bash(chezmoi apply:*)",
      "Bash(chezmoi execute-template:*)",
      "Bash(chezmoi data:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "WebFetch(domain:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "mcp__serena"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(chezmoi destroy:*)",
      "Bash(chezmoi purge:*)",
      "Read(.env*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Write(.env*)"
    ]
  },
  "cleanupPeriodDays": 60,
  "preferredNotifChannel": "auto",
  "includeCoAuthoredBy": false,
  "enableAllProjectMcpServers": true,
  "statusLine": {
    "type": "command",
    "command": "printf '%s@%s:%s' \"$(whoami)\" \"$(hostname -s)\" \"$(pwd)\" | sed 's|'\"$HOME\"'|~|'"
  }
}
